{
  "name": "@quizflow/api-client",
  "version": "1.0.0",
  "description": "QuizFlow API Client",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./endpoints/*": {
      "import": "./dist/endpoints/*.mjs",
      "require": "./dist/endpoints/*.js",
      "types": "./dist/endpoints/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@quizflow/types": "*"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@quizflow/types": "*"
  }
}
